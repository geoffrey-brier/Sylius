<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd"
                  xmlns:prezent="prezent">

    <mapped-superclass name="Sylius\Component\Core\Model\Review" table="sylius_review">
        <many-to-one field="user" target-entity="Sylius\Component\Core\Model\UserInterface" >
            <join-column name="user_id" referenced-column-name="id" nullable="false" />
        </many-to-one>

        <many-to-one field="product" target-entity="Sylius\Component\Core\Model\ProductInterface" inversed-by="reviews">
            <join-column name="product_id" referenced-column-name="id" nullable="false" />
            <gedmo:versioned />
        </many-to-one>
    </mapped-superclass>

</doctrine-mapping>
