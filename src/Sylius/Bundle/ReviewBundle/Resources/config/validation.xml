<constraint-mapping xmlns="http://symfony.com/schema/dic/constraint-mapping"
                    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                    xsi:schemaLocation="http://symfony.com/schema/dic/constraint-mapping
                                        http://symfony.com/schema/dic/services/constraint-mapping-1.0.xsd">

    <class name="Sylius\Component\Review\Model\Review">
        <property name="globalRating">
            <constraint name="NotBlank">
                <option name="message">sylius.review.globalRating.not_blank</option>
                <option name="groups">sylius</option>
            </constraint>
        </property>
        <property name="content">
            <constraint name="NotBlank">
                <option name="message">sylius.review.content.not_blank</option>
                <option name="groups">sylius</option>
            </constraint>
            <constraint name="Length">
                <option name="min">2</option>
                <option name="minMessage">sylius.review.content.min_length</option>
                <option name="max">1000</option>
                <option name="maxMessage">sylius.review.content.max_length</option>
                <option name="groups">sylius</option>
            </constraint>
        </property>
        <property name="ratings">
            <constraint name="Valid">
        </property>
    </class>

    <class name="Sylius\Component\Review\Model\Rating">
        <property name="ratingValue">
            <constraint name="NotBlank">
                <option name="message">sylius.review.ratingValue.not_blank</option>
                <option name="groups">sylius</option>
            </constraint>
        </property>
    </class>

</constraint-mapping>
